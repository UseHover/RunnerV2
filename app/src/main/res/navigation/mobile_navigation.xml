<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/navigation_actions">

	<!--Actions -->
	<fragment
		android:id="@+id/navigation_actions"
		android:name="com.hover.runner.action.fragments.ActionsFragment"
		android:label="@string/title_actions"
		tools:layout="@layout/fragment_actions" />

	<fragment
		android:id="@+id/navigation_actionDetails"
		android:name="com.hover.runner.action.fragments.ActionDetailsFragment"
		android:label="@string/action_details"
		tools:layout="@layout/action_details_fragment">
		<argument
			android:name="action_id"
			app:argType="string" />
	</fragment>

	<fragment
		android:id="@+id/navigation_uncompletedVariableFragment"
		android:name="com.hover.runner.action.fragments.UnCompletedVariablesFragment"
		android:label="@string/uncompleted_variable_notice"
		tools:layout="@layout/uncompleted_variable_fragment_layout">
	</fragment>

	<fragment
		android:id="@+id/navigation_actionFilter"
		android:name="com.hover.runner.filter.filter_actions.fragments.ActionsFilterFragment"
		android:label="@string/title_filter"
		tools:layout="@layout/action_filter_fragment" />


	<!--Transactions -->
	<fragment
		android:id="@+id/navigation_transactions"
		android:name="com.hover.runner.transaction.fragments.TransactionListFragment"
		android:label="@string/title_transactions"
		tools:layout="@layout/fragment_transactions" />

	<fragment
		android:id="@+id/navigation_transactionsFilter"
		android:name="com.hover.runner.filter.filter_transactions.fragment.TransactionsFilterFragment"
		android:label="@string/title_filter_trans"
		tools:layout="@layout/transaction_filter_fragment" />

	<fragment
		android:id="@+id/navigation_transactionDetails"
		android:name="com.hover.runner.transaction.fragments.TransactionDetailsFragment"
		android:label="@string/transaction_details"
		tools:layout="@layout/transaction_details_fragment">
		<argument
			android:name="uuid"
			app:argType="string" />
	</fragment>

	<!-- Filter Selection Fragments -->

	<fragment
		android:id="@+id/navigation_filter_selectByActions"
		android:name="com.hover.runner.filter.selectionFragments.SelectActionsFragment"
		android:label="@string/filter"
		tools:layout="@layout/filter_by_actions"/>

	<fragment
		android:id="@+id/navigation_filter_selectByCategory"
		android:name="com.hover.runner.filter.selectionFragments.SelectCategoryFragment"
		android:label="@string/title_filter"
		tools:layout="@layout/filter_by_categories" />

	<fragment
		android:id="@+id/navigation_filter_selectByCountry"
		android:name="com.hover.runner.filter.selectionFragments.SelectCountryFragment"
		android:label="@string/filter"
		tools:layout="@layout/filter_by_country">
		<argument
			android:name="filterfor"
			app:argType="interger" />
	</fragment>

	<fragment
		android:id="@+id/navigation_filter_selectByNetworkNames"
		android:name="com.hover.runner.filter.selectionFragments.SelectNetworkNameFragment"
		android:label="@string/filter"
		tools:layout="@layout/filter_by_network_name">
		<argument
			android:name="filterfor"
			app:argType="interger" />
	</fragment>

	<!--Parsers -->

	<fragment
		android:id="@+id/navigation_parserDetails"
		android:name="com.hover.runner.parser.fragment.ParserDetailsFragment"
		android:label="@string/parser_details"
		tools:layout="@layout/parsers_fragment">
		<argument
			android:name="parser_id"
			app:argType="integer" />
		<argument
			android:name="action_id"
			app:argType="string" />
	</fragment>


	<!--Settings -->
	<fragment
		android:id="@+id/navigation_settings"
		android:name="com.hover.runner.settings.fragment.SettingsFragment"
		android:label="@string/title_settings"
		tools:layout="@layout/settings_fragment" />

</navigation>
