<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        >
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.action_details.ActionDetailsFragment"
                android:orientation="vertical">

            <com.hover.runner.customViews.detailsTopLayout.DetailsHeaderView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:paddingTop="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_15"
                        android:text="@string/operators"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/operators" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_15"
                        android:text="@string/longcode"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/longcode" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_15"
                        android:text="@string/parsers"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:lineSpacingExtra="10dp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/parsers_content" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_15"
                        android:text="@string/title_transactions"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/transactionCount" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="56dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreen"
                        android:textSize="@dimen/text_15"
                        android:text="@string/success_label"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/successCount" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="56dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/text_15"
                        android:text="@string/pending_label"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/pendingCount" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="56dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/text_15"
                        android:text="@string/failed_label"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryGrey"
                        android:textSize="@dimen/text_15"
                        android:id="@+id/failedCount" />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin16"
                    android:textColor="@color/colorHoverWhite"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    android:textSize="@dimen/text_17"
                    android:id="@+id/variableLabel_group1"
                    android:text="@string/testing_variables"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/variableLabel_group2"
                    android:layout_marginHorizontal="@dimen/margin16"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/testing_variables_desc"
                    android:textColor="@color/colorHoverWhite"
                    android:textSize="@dimen/text_15"
                    android:id="@+id/variableLabel_group3"
                    android:layout_marginHorizontal="@dimen/margin16"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin16"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:id="@+id/action_variables_recyclerView"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="@dimen/margin16">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/recent_transactions"
                        android:id="@+id/recentHeader"
                        android:textColor="@color/colorHoverWhite"
                        android:textSize="@dimen/text_17"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:id="@+id/viewAll"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorHoverWhite"
                        android:textSize="@dimen/text_15"
                        />
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="@dimen/margin16" />

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/margin16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:id="@+id/transaction_recycler"/>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:textAlignment="center"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_17"
            android:textColor="@color/runActionTextColor"
            android:id="@+id/testSingle_id"
            android:text="@string/test_single_action"/>
    </FrameLayout>

</LinearLayout>