<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/runnerDark"
		android:layout_marginBottom="55dp"
		xmlns:tools="http://schemas.android.com/tools"
		tools:context=".actions.ActionsFragment"
		xmlns:android="http://schemas.android.com/apk/res/android">

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/pullToRefresh"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:paddingTop="4dp" >

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:orientation="horizontal">

				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:textAlignment="textStart"
						android:textStyle="bold"
						android:textSize="@dimen/text_22"
						android:textColor="@color/runnerWhite"
						android:text="@string/title_actions"
						android:paddingHorizontal="@dimen/margin16"
						android:layout_weight="1" />

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/runnerWhite"
						android:textSize="@dimen/text_17"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:gravity="center"
						android:paddingHorizontal="@dimen/margin16"
						android:paddingVertical="16dp"
						android:id="@+id/actionFilter"
						android:text="@string/filter_underlined"/>

			</LinearLayout>

			<include android:id="@+id/recyclerViewState"
				android:visibility="gone"
				layout="@layout/recycler_view_state"/>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyclerView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

		</LinearLayout>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@color/runnerPrimary">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:background="?selectableItemBackground"
			android:textAlignment="center"
			android:textStyle="bold"
			android:textColor="?attr/colorOnPrimary"
			android:textSize="@dimen/text_17"
			android:id="@+id/testAllActions_id"
			android:text="@string/testAllActions"/>
	</FrameLayout>
</LinearLayout>
