<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/margin8"
	android:padding="@dimen/margin8"
	app:elevation="@dimen/margin8">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/darkGrey"
		android:orientation="vertical"
		android:paddingVertical="@dimen/margin8">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/successCount"
				android:background="?selectableItemBackground"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:padding="@dimen/margin8"
				android:textColor="@color/runnerGreen"
				android:textSize="@dimen/text_15" />

			<TextView
				android:id="@+id/failedCount"
				android:background="?selectableItemBackground"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:padding="@dimen/margin8"
				android:textColor="@color/runnerRed"
				android:textSize="@dimen/text_15" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/pendingCount"
				android:background="?selectableItemBackground"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:padding="@dimen/margin8"
				android:textColor="@color/runnerYellow"
				android:textSize="@dimen/text_15" />

			<TextView
				android:id="@+id/notYetRunCount"
				android:background="?selectableItemBackground"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:paddingVertical="@dimen/margin8"
				android:textColor="@color/white"
				android:textSize="@dimen/text_15" />

		</LinearLayout>

	</LinearLayout>
</androidx.cardview.widget.CardView>