<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/colorSecondaryGrey"
android:paddingVertical="16dp"
android:id="@+id/actionDetailsTopLayoutId"
android:paddingHorizontal="@dimen/margin16"
android:orientation="vertical">
<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textStyle="bold"
	android:drawablePadding="@dimen/margin16"
	android:textColor="@color/colorPrimaryDark"
	android:textSize="@dimen/text22"
	android:transitionName="action_title"
	android:id="@+id/actionDetails_toolbarText"
	app:drawableStartCompat="@drawable/ic_arrow_back_black_24dp" />

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/margin42"
	android:textSize="@dimen/text_14"
	android:id="@+id/actionDetails_subtoolText"
	android:textColor="@color/colorPrimaryDark"
	android:layout_marginBottom="@dimen/margin16"
	/>


<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text="@string/unrunStatus_title"
	android:textStyle="bold"
	android:textColor="@color/colorPrimaryDark"
	android:textSize="@dimen/text_14"
	android:id="@+id/actionDetails_statusTitle"
	/>

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text="@string/unrunStatus_title"
	android:textStyle="bold"
	android:visibility="gone"
	android:layout_marginStart="42dp"
	android:textColor="@color/colorPrimaryDark"
	android:textSize="@dimen/text_14"
	android:id="@+id/actionDetails_statusTitle2"
	/>

<TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/actionDetails_statusDesc"
	android:text="@string/pendingStatus_desc"
	android:textColor="@color/colorPrimaryDark"
	android:textSize="@dimen/text_14"
	android:visibility="gone"
	android:layout_marginStart="@dimen/margin42"
	android:layout_marginBottom="@dimen/margin16"
	/>

<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/actionDetails_statusLink"
	android:text="@string/pendingStatus_linkText"
	android:textStyle="bold"
	android:textSize="@dimen/text_14"
	android:textColor="@color/colorPrimaryDark"
	android:drawablePadding="4dp"
	android:visibility="gone"
	android:layout_marginStart="@dimen/margin42"
	android:layout_marginBottom="8dp"
	app:drawableEndCompat="@drawable/ic_open_in_new_black_15dp" />
</LinearLayout>