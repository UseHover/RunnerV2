<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".testRuns.RunSummaryFragment"
        android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingVertical="16dp"
        android:id="@+id/run_header"
        android:paddingHorizontal="@dimen/margin16"
        android:orientation="horizontal">

        <TextView android:id="@+id/run_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="?selectableItemBackground"
                android:drawablePadding="@dimen/margin16"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_22"
                android:text="@string/run_group_head"
                app:drawableStartCompat="@drawable/ic_close_black_24dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/run_label"
                android:background="?selectableItemBackground"
                android:padding="@dimen/margin16"
                android:textSize="@dimen/text_15"
                android:textStyle="bold"
                android:id="@+id/start_btn"
                android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin21"
        android:text="@string/uncompleted_variable_notice"
        android:textColor="@color/colorHoverWhite"
        android:textSize="@dimen/text_17"
        android:id="@+id/u_variable_statusTitle2" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin21"
        android:layout_marginBottom="@dimen/margin52"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight="1"
        android:id="@+id/action_variables"/>
</LinearLayout>