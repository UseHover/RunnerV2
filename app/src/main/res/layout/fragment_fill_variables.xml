<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".testRuns.FillVariablesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin52"
    android:background="?attr/colorSurface">

    <RelativeLayout android:id="@+id/run_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/colorPrimary"
        android:paddingVertical="16dp"
        android:paddingHorizontal="@dimen/margin16"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/run_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:drawablePadding="@dimen/margin16"
                android:textSize="@dimen/text_22"
                android:text="@string/new_run_vars_title"
                app:drawableStartCompat="@drawable/ic_close_black_24dp" />

            <TextView android:id="@+id/run_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin21"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_22"
                android:text="@string/new_run_vars_subtitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin21"
                android:text="@string/run_group_description"
                android:textSize="@dimen/text_17"
                android:textColor="?attr/colorOnPrimary"
                android:id="@+id/u_variable_statusTitle2" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/run_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_run_vars_title"
                android:textSize="@dimen/text_22"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/action_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_run_vars_title"
                android:textSize="@dimen/text_14"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/action_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/above_skip_text"
                android:textColor="@color/mainGrey"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_text"
                android:textColor="@color/mainGrey"
                android:textSize="@dimen/text_15"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:text="@string/next_label"
        android:textStyle="bold"
        app:shapeAppearanceOverlay="@style/ExtendedFab" />
</RelativeLayout>