<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        tools:context=".transaction.fragments.TransactionDetailsFragment"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="32dp"
            android:orientation="vertical">

        <com.hover.runner.ui.DetailsHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transactionDetailsTopLayoutId"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/margin16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_aboutInfo_recyclerView"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messages"
                android:textColor="@color/colorHoverWhite"
                android:textSize="@dimen/text_17"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="@dimen/margin16"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/margin16"
                />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/margin16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_messages_recyclerView"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin16"
                android:textColor="@color/colorHoverWhite"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textSize="@dimen/text_17"
                android:text="@string/device"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/margin16"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_devices_recyclerView"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug_info"
                android:textColor="@color/colorHoverWhite"
                android:textSize="@dimen/text_17"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="@dimen/margin16"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/margin16"
                />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/margin16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_debugInfo_recyclerView"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>