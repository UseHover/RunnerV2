<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle" android:padding="10dp">

			<solid android:color="@color/runnerDark"/>
			<stroke android:width="@dimen/stroke_bold" android:color="@color/white"/>
			<corners android:radius="@dimen/radius_corner" />

		</shape>

	</item> <!-- pressed -->

	<item android:state_activated="true">
		<shape android:shape="rectangle" android:padding="10dp">

			<solid android:color="@color/runnerDark"/>
			<stroke android:width="@dimen/stroke_bold" android:color="@color/runnerRed"/>
			<corners android:radius="@dimen/radius_corner" />
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

		</shape>
	</item>


	<item android:state_focused="true">
		<shape android:shape="rectangle" android:padding="10dp">

			<solid android:color="@color/runnerDark"/>
			<stroke android:width="@dimen/stroke_bold" android:color="@color/white"/>
			<corners android:radius="@dimen/radius_corner" />
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

		</shape>
	</item> <!-- focused -->

	<item android:state_activated="false">
		<shape android:shape="rectangle" android:padding="10dp">

			<solid android:color="@color/runnerDark"/>
			<stroke android:width="@dimen/stroke"
					android:dashGap="3dp"
					android:color="@color/mainGrey"/>
			<corners android:radius="@dimen/radius_corner" />
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

		</shape>
	</item>

	<item>
		<shape android:shape="rectangle" android:padding="10dp">

			<solid android:color="@color/runnerDark"/>
			<stroke android:width="@dimen/stroke"
					android:dashGap="3dp"
					android:color="@color/mainGrey"/>
			<corners android:radius="@dimen/radius_corner" />
			<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

		</shape>
	</item> <!-- default -->
</selector>

